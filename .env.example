# Database Configuration
DATABASE_URL=postgresql://cybertoolbox:your_secure_password@localhost:5432/cybertoolbox
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cybertoolbox
DB_USER=cybertoolbox
DB_PASSWORD=your_secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key
ENCRYPTION_KEY=your-32-byte-encryption-key

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
MFA_ISSUER=CyberToolbox Pro

# Application
APP_NAME=CyberToolbox Pro
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# CORS and Security
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
CORS_ORIGINS=http://localhost:3000,https://localhost:3000,https://yourdomain.com

# Kali Tools Paths (Docker)
NMAP_PATH=/usr/bin/nmap
METASPLOIT_PATH=/usr/bin/msfconsole
SQLMAP_PATH=/usr/bin/sqlmap
HYDRA_PATH=/usr/bin/hydra
JOHN_PATH=/usr/bin/john
BURPSUITE_PATH=/usr/bin/burpsuite
OPENVAS_PATH=/usr/bin/openvas

# File Paths
REPORTS_DIR=/app/reports
LOGS_DIR=/app/logs
TEMPLATES_DIR=/app/templates
UPLOADS_DIR=/app/uploads

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@cybertoolbox.pro

# Monitoring (optional)
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Performance
WORKER_PROCESSES=4
MAX_SCAN_DURATION=7200  # 2 hours in seconds
MAX_CONCURRENT_SCANS=5

# Feature Flags
ENABLE_REGISTRATION=false
ENABLE_GUEST_MODE=false
ENABLE_API_DOCS=true
ENABLE_METRICS=true
